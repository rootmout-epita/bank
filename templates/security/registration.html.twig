{% extends 'base.html.twig' %}

{% block body %}
    <div class="container text-center">
        <div class="jumbotron">

            <h1>Inscription sur le site</h1>
            <hr class="my-4">

            {{ form_start(form) }}
            <div class="container text-center">
                <div class="form-group">
                    {{ form_row(form.name, {'label': ' ','attr': {placeholder: 'Nom'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.firstname, {'label': ' ','attr': {placeholder: 'Pr√©nom'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.email, {'label': ' ','attr': {placeholder: 'Email'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.password, {'label': ' ','attr': {placeholder: 'Mot de passe'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.confirm_password, {'label': ' ','attr': {placeholder: 'Confirmation mot de passe'}}) }}
                </div>
            </div>

            {{ form_widget(form) }}
            <div class="row-fluid">
                <button type="submit" class="btn btn-success">Inscription</button>
                {{ form_end(form) }}
                <a href="{{ path('security_login') }}" class="btn btn-primary">Retour</a>
            </div>
        </div>
    </div>


{% endblock body %}