{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-4">
        <h1>Connexion</h1>
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey }}</div>
        {% endif %}
        <form action="{{ path('security_login') }}" method="post">
            <div class="form-group">
                <input required placeholder="e-mail" name="_username" type="text" class="form-control"/>
                <input required placeholder="password" name="_password" type="password" class="form-control"/>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">Connexion</button>
            </div>
        </form>
        <p>Pas de compte ? <a href="{{ path('security_registration') }}">Inscrivez-vous</a> !</p>
        <a href="{{ path('home') }}" class="btn btn-primary">Retour accueil</a>
    </div>
{% endblock %}

{% block title %}

{% endblock %}

