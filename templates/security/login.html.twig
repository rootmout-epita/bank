{% extends 'base.html.twig' %}

{% block body %}
    <div class="container text-center">
        <div class="jumbotron">
            <h1>Connexion</h1>
            <hr class="my-4">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey }}</div>
            {% endif %}
            <div class="container text-center">
                <form action="{{ path('security_login') }}" method="post">
                    <div class="form-group">
                        <input required placeholder="Email" name="_username" type="text" class="form-control"/>
                        <input required placeholder="Mot de passe" name="_password" type="password" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success btn-lg btn-block">Connexion</button>
                    </div>
                </form>
            </div>
        </div>

        <p>Pas de compte ? <a href="{{ path('security_registration') }}">Inscrivez-vous</a> !</p>
        <a href="{{ path('home') }}" class="btn btn-primary">Retour accueil</a>

    </div>

{% endblock %}

{% block title %}

{% endblock %}

