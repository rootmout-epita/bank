{% extends 'base.html.twig' %}

{% block body %}



    <div class="container mt-4">
        <h1>Bonjour {{ user.getFirstname}} {{user.getName}}</h1>

        <a href="{{ path('security_logout') }}" class="btn btn-danger">Déconnexion</a>

        <hr/>
        <h3>Gestion des comptes <span class="badge badge-secondary">{{ nbr_accounts }}</span></h3>
        <a href="{{ path('new.accounts') }}" class="btn btn-primary" >Nouveau</a>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">{{ message }}</div>
        {% endfor %}
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">{{ message }}</div>
        {% endfor %}
        <table class="table table-striped mt-4">
            <thead>
            <tr>
                <th>ID</th><th>Nom</th><th>Balance</th><th>Dernière Opération</th><th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for account in accounts %}
                <tr>
                    <td>{{ account.id }}</td>
                    <td>{{ account.name }}</td>
                    <td class="font-weight-bold">{{ account.formatedBalance }} €</td>
                    <td>{{ account.lastOperation|date("d/m/Y H:i:s", "America/New_York") }}</td>
                    <td>
                        <a href="{{ path('edit.accounts', {id: account.id}) }}" class="btn btn-secondary">Modifier</a>

                        <form method="post" action="{{ path('edit.accounts', {id: account.id}) }}" style="display: inline-block">
                            <button class="btn btn-danger">Supprimer</button>
                            <input type="hidden" name="_method" value="DELETE">
                        </form>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    <p>Time zone : America/New_York</p>
    </div>

{% endblock %}

